.wraper
  .sell-btn
    .sell-btn__text 出品
    %i.fas.fa-camera
= render "homes/header"

- breadcrumb :creditcard, class: "breadcrumbs"
= breadcrumbs pretext: "",separator: " &rsaquo; "

.mypage
  = render "side-bar"
  .credit__main2
    .credit__main2__top
      クレジットカード情報入力
    = form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
      .credit__main2__top__text
        カード番号
        .credit__main2__top__text__any
          必須
      .credit__main2__top__frame
        = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      .credit__main2__top__image
      .credit__main2__top__text
        有効期限
        .credit__main2__top__text__any
          必須
      
      .credit__main2__top__form
        %select#exp_month{name: "exp_month", type: "text", class: "month"}
          %option{value: ""} --
          %option{value: "1"}01
          %option{value: "2"}02
          %option{value: "3"}03
          %option{value: "4"}04
          %option{value: "5"}05
          %option{value: "6"}06
          %option{value: "7"}07
          %option{value: "8"}08
          %option{value: "9"}09
          %option{value: "10"}10
          %option{value: "11"}11
          %option{value: "12"}12
        %span 月
        %select#exp_year{name: "exp_year", type: "text", class: "month"}
          %option{value: ""} --
          %option{value: "2019"}19
          %option{value: "2020"}20
          %option{value: "2021"}21
          %option{value: "2022"}22
          %option{value: "2023"}23
          %option{value: "2024"}24
          %option{value: "2025"}25
          %option{value: "2026"}26
          %option{value: "2027"}27
          %option{value: "2028"}28
          %option{value: "2029"}29
        %span 年
      .credit__main2__top__text
        セキュリティコード
        .credit__main2__top__text__any
          必須
      .credit__main2__top__frame
        = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        #card_token
      .credit__main2__top__text__info
        カード裏面の番号とは？
      .credit__main2__top__text__submit
        = submit_tag "追加する", id: "token_submit", class: "submits" 
  
= render "homes/footer"
      
