.wrapper
  .sell-btn
    .sell-btn__text 出品
    %i.fas.fa-camera
  = render "homes/header"

  - breadcrumb :exhibition1, class: "breadcrumbs"
  = breadcrumbs pretext: "",separator: " &rsaquo; "

  .mypage
    = render "homes/side-bar"
    .exhibition
      .exhibition__header
        出品した商品
      .exhibition__main
        = link_to '出品中', listing_account_path, class: "exhibition__main__left2"
        = link_to '購入済み', listing_progress_account_path, class: "exhibition__main__center2"
        = link_to '売却済み', completed_account_path, class: "exhibition__main__right"
      .exhibition__footer
        - if @product[0][:progress] == "交渉中"
          - @product.each do |product|
            = link_to product_path(product.id), class: "exhibition__footer__box" do
              .exhibition__footer__box__image
                - product.products_images.each do |image|
                  = image_tag "#{image.image}", class: "exhibition__footer__box__image__box" 
                  .exhibition__footer__box__image__text
                    = product.name
                    .exhibition__footer__box__image__status
                      購入済
              .exhibition__footer__box__arrow >

  = render "homes/footer"
