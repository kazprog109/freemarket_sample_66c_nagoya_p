.wraper
  .sell-btn
    .sell-btn__text 出品
    %i.fas.fa-camera
= render "homes/header"

- breadcrumb :mypage, class: "breadcrumbs"
= breadcrumbs pretext: "",separator: " &rsaquo; "

.mypage
  = render "homes/side-bar"
  .indent__main
    = form_for(@address, url: account_path, method: :patch) do |f|
      .indent__main__box__1
        本人情報の登録
      .indent__main__box__2
        お客さまの本人情報をご登録ください。
        %br
        登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
      .indent__main__box__3
        .indent__main__box__3__name
          お名前
        .indent__main__box__3__input
          = @user.familyname
          = @user.firstname
      .indent__main__box__4
        .indent__main__box__4__name
          お名前 カナ
        .indent__main__box__4__input
          = @user.familyname_kana
          = @user.firstname_kana
      .indent__main__box__5
        .indent__main__box__5__name
          生年月日
        .indent__main__box__5__input
          = @user.birthyear
          = @user.birthmonth
          = @user.birthday
      .indent__main__box__6
        .indent__main__box__6__name
          郵便番号
          .indent__main__box__6__name__any
            任意
        .indent__main__box__6__input
          = f.text_field :zipcode, class: "indent__main__box__input-form"
      .indent__main__box__7
        .indent__main__box__7__name
          都道府県
          .indent__main__box__7__name__any
            任意
        .indent__main__box__7__input
          = f.text_field :prefecture, class: "indent__main__box__input-form"
      .indent__main__box__8
        .indent__main__box__8__name
          市区町村
          .indent__main__box__8__name__any
            任意
        .indent__main__box__8__input
          = f.text_field :city, class: "indent__main__box__input-form"
      .indent__main__box__9
        .indent__main__box__9__name
          番地
          .indent__main__box__9__name__any
            任意
        .indent__main__box__9__input
          = f.text_field :district, class: "indent__main__box__input-form"
      .indent__main__box__10
        .indent__main__box__8__name
          建物名
          .indent__main__box__8__name__any
            任意
        .indent__main__box__8__input
          = f.text_field :building, class: "indent__main__box__input-form"
      .indent__main__box__11
        = f.submit "登録する", class: "indent__main__box__submit"
      .indent__main__box__12
        本人情報の登録について＞


  
= render "homes/footer"
