= render "signup/header"

.login-main
  .login-main__box 
    .login-main__box-inner
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login-main__top
          .login-main__top-text
            アカウントをお持ちでない方はこちら
          .login-main__top-login
            新規会員登録
        .login-main__sns
          .login-main__sns-f
            .login-main__sns-f__icon
              %i.fab.fa-facebook-square
            .login-main__sns-f__text
              Facebookでログイン
          .login-main__sns-g
            .login-main__sns-g__icon
            .login-main__sns-g__text
              googleでログイン
        .login-main__form
          .login-main__form-mail
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "login-main__form-m", placeholder: 'メールアドレス'
          .login-main__form-pass
            = f.password_field :password, autocomplete: "current-password", class: "login-main__form-p", placeholder: 'パスワード'
          .login-main__form-recapcha
          .login-main__form-btn
            = f.submit "ログイン", class: "login-main__form-btn_2"
          .login-main__form-forget
            パスワードをお忘れの方
= render "signup/footer"

